@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}
@if(!Model.Any()){
    <div class="alert alert-warning">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0">No Games added yet<a href="#" class="alert-link">vel scelerisque nisl consectetur et</a>.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach(Game game in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12">
                <a asp-controller="Games" asp-action ="Details" asp-route-id ="@game.Id" class="x card border-light mb-3 text-decoration-none rounded-3 overflow-hidden">
                    <div class="card-body" style="background-image:url(@($"{FileSettings.imgPath}/{game.Image}")) ; background-size:cover;background-position:center;height:500px;">
                        <div class="h-100 d-flex align-items-end">
                            <span class="badge bg-secondary rounded-0">@game.Category?.Name</span>
                        </div>
                    </div>
                    <div class="card-footer bg-muted d-flex justify-content-between align-items-center">
                        <h5>@game.Name</h5>
                        <div>
                            @foreach (var device in game.Devices)
                            {
                                <i class="@device.Device.Icon me-2 fs-4"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
