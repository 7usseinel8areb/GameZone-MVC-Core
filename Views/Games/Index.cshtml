@model IEnumerable<Game>
@{
    ViewBag.Title = "Games";
}

<a asp-action="Create" class="btn btn-secondary">
    <i class="bi bi-plus-lg btn-lg"></i>
    Add Game
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0">No Games added yet<a href="#" class="alert-link">vel scelerisque nisl consectetur et</a>.</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered border-primary">
            <tbody>
                @foreach(Game game in Model)
                {
                    <tr class="border-1 border-light">
                        <td>
                            <div class="d-flex">
                                <div class="pe-4">
                                    <img src="@($"{FileSettings.imgPath}/{game.Image}")" alt="@game.Name" style="max-width:90px;max-height:200px" />
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4 class="text-light">@game.Name</h4>
                                    <h5>@game.Category.Name</h5>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-end">
                                <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-info rounded rounded-3 me-2">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action ="Delete" asp-route-id="@game.Id" class="btn btn-danger rounded rounded-3">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}